<h1>Listing shows</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Location</th>
    <th>Host</th>
    <th>Host</th>
    <th>Musician</th>
    <th>Ticket price</th>
    <th>Tickets min</th>
    <th>Tickets max</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.date %></td>
    <td><%= show.location %></td>
    <td><%= show.host %></td>
    <td><%= show.host_id %></td>
    <td><%= show.musician_id %></td>
    <td><%= show.ticket_price %></td>
    <td><%= show.tickets_min %></td>
    <td><%= show.tickets_max %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

